<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true" bootstrap="tests/TestCase.php">
    <testsuites>
        <testsuite name="Application Test Suite">
            <directory>./tests/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <blacklist>
            <directory>./vendor</directory>
            <directory>./tests</directory>
        </blacklist>
        <whitelist>
            <directory>./lib</directory>
        </whitelist>
    </filter>
</phpunit>
